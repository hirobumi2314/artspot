<h1>collections</h1>

<div class="input-group">
  <%= form_tag collections_path, :method => 'get', id: "search-form" do %>
    <p>
      <%= text_field_tag :search, params[:search], class: 'form-control' %>
      <span class="input-group-btn">
        <%= submit_tag "Search", :name => nil, class: 'btn btn-default' %>
        <%= link_to "New", new_collection_path, class: 'btn btn-default' %>
      </span>
    </p>
  <% end %>
</div>

<div class="row">
    <%- j = -1
    @filtered_collections.each do |collection| 
      j = j + 1%>
    <div class="col-md-4">
    <% if j % 2 == 0%>
      <div class="panel panel-primary">
      <%end%>
    <% if j % 2 == 1%>
      <div class="panel panel-danger">
      <%end%>
          <div class="panel-heading">
              <% if collection.name == "" %>
              <h4 class="title">&nbsp;</h4>
              <% else%>
              <h4 class="title"> <%= collection.name%> </h4>
              <% end%>
          </div>
          <div class="panel-body">
          <% files = Dir["#{Rails.root}/public/uploads/collection/" + collection.id.to_s + "/pic/*"] %>
              <%  i = 0 
              pic = Array.new
              files.each do |file_name| %>                            
                  <%pic[i]= "/uploads/collection/" + collection.id.to_s + "/pic/" + 
                  Pathname.new(file_name).basename.to_s%>
                  <% i = i + 1
                  if i==5 %>
                  <%break%>
                <% end%>
              <% end%>
              <div id="chartPreferences" class="ct-chart ct-perfect-fourth">
                  <div id="myCarousel" class="carousel slide">
                  <!-- Indicators -->
                  <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                    <li data-target="#myCarousel" data-slide-to="3"></li>
                  </ol>

                  <!-- Wrapper for slides -->
                  <div class="carousel-inner" role="listbox">
                    <% flag = 0
                    pic.each do |p|%>
                      <%if flag == 0%>
                      <div class="item active">
                        <img src=<%=p%> alt="Chania">
                        <% flag = 1%>
                      </div>
                      <%else%>
                      <div class="item">
                        <img src=<%=p%> alt="Chania">
                      </div>
                      <%end%>
                    <%end%>
                  </div>

                  <!-- Left and right controls -->
                  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev"  onclick="$('#myCarousel').carousel('prev')">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next"  onclick="$('#myCarousel').carousel('next')">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>
                </div>
                

              </div>
              <div class="footer">
                  <div class="legend">
                      <i class="fa fa-circle text-info"></i> 
                      <%= link_to "Show", {:action => "showbycollectionid", :controller => "information", :id => collection.id }, class: "btn btn-success" , type: "button" %>
                  </div>
                  <hr>
                  <div class="stats">
                      <i class="fa fa-clock-o"></i> Created at <%= collection.created_at%> 
                  </div>
              </div>
          </div>
      </div>
    </div>                
  <%- end %>
</div>

<br>
